{
  "name": "template",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "eslint && next dev",
    "build": "next build",
    "start": "next start",
    "check": "tsc --noEmit",
    "lint": "eslint",
    "prepare": "husky",
    "format": "prettier --write .",
    "db:pull": "drizzle-kit pull && ./scripts/move-drizzle-files.sh",
    "db:push": "drizzle-kit push",
    "db:gen": "drizzle-kit generate",
    "db:mig": "drizzle-kit migrate",
    "db:chk": "drizzle-kit check",
    "env": "vercel env pull .env",
    "env:prd": "vercel env pull .env --environment production"
  },
  "dependencies": {
    "@t3-oss/env-nextjs": "^0.13.10",
    "better-auth": "^1.4.15",
    "drizzle-orm": "^0.45.1",
    "next": "16.1.3",
    "pg": "^8.17.1",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "server-only": "^0.0.1",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/pg": "^8.16.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9",
    "eslint-config-next": "16.1.3",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-drizzle": "^0.2.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "3.8.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "typescript": "^5"
  }
}
